{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "* * 1 */1 *"
  ],
  "labels": [
    "kind/dependencies",
    "skip/changelog",
    "tests/skip"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": false
    }
  ]
}
