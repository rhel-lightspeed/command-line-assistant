# Use CentOS Stream 10 as the base image
FROM quay.io/fedora/fedora:42@sha256:a5eea2b952e66399c4bfa604b09d7e848e0fb02f075b8818747f055f54932a5e

# Install Python, pip, and development tools
RUN dnf install -y \
    python3-pip \
    'pkgconfig(cairo)' \
    'pkgconfig(cairo-gobject)' \
    'pkgconfig(gobject-introspection-1.0)' \
    'pkgconfig(mariadb)' \
    /usr/bin/pg_config && \
    dnf clean all

# Upgrade pip
RUN python -m pip install --upgrade pip

# Set up a working directory
WORKDIR /workspace
